<!DOCTYPE html>
<html>
    <% include head%>
<body>	
    <% include header%>

    <% include hot%>

    <!-- MAIN -->
    <div class="container">
        
        <div class="row justify-content-between ">

            <!-- NEW -->
            <div class="col-lg-8 new">
                <div class="row new_title justify-content-between">
                    <div class="col-12 d-flex justify-content-between">
                        <h5><i class="fas fa-book-open" ></i> NEW</h5>
                        <a href="/article_list/0" style="text-decoration: none; color: #fff" class="text-right"><h5>Xem thêm <i class="fas fa-caret-right"></i></h5></a>
                    </div>
                </div>
                <% for(var i = 0; i < sess.articles.length; i++) {%>
                    <div class="row new_item justify-content-between bg-dark">
                        <div class="col-lg-4 col-md-6 col-sm-6 col-6 pic__wrapper" >
                            <a href="/article/<%= sess.articles[i].ar_ID%>" class="pic">
                                <img src="/images/article/<%= sess.articles[i].ar_pic%>" title="<%= sess.articles[i].ar_name%>">
                            </a>
                        </div>
                        <div class="col-lg-8 col-md-6 col-sm-6 col-6 article_title ">
                            <a href="/article/<%= sess.articles[i].ar_ID%>" class="main_title" title="<%= sess.articles[i].ar_name%>"> <%= sess.articles[i].ar_name%> </a>
                            <br>
                            <span class="badge badge-info"> <% if(sess.chapters[i][0]){%> <%= sess.chapters[i][0].chap_name%><%}%></span>
                            <!-- <p>Lượt xem: <%= sess.articles[i].ar_view%> <i class="fas fa-eye"></i></p> -->
                            <br>
                            <div class="article__cateList">
                                <%if(sess.cate[i].length > 4){%>
                                    <%for(var j = 0; j < 4; j++) {%>
                                        <a href="/article_list/<%= sess.cate[i][j].cat_ID%>" title="<%= sess.cate[i][j].cat_des%>" class="cate"><span class="badge badge-pill badge-danger"><%= sess.cate[i][j].cat_name%></span></a>
                                    <%}%>
                                    <a href="" class="cate"><span class="badge badge-pill badge-danger">[...]</span></a>
                                <%}else {%>
                                    <%for(var j = 0; j < sess.cate[i].length; j++) {%>
                                        <a href="/article_list/<%= sess.cate[i][j].cat_ID%>" title="<%= sess.cate[i][j].cat_des%>" class="cate"><span class="badge badge-pill badge-danger"><%= sess.cate[i][j].cat_name%></span></a>
                                    <%}%>
                                <%}%>
                            </div>
                            
                        </div>
                    </div>
                <% } %>
                
                
                
                
                
                
            </div>
            <!-- END OF NEW -->

            <div class="col-lg-3">
                
                <!-- RANDOM PIC -->
                <div class="row random_pic">
                    <div class="col-md-12 rd_title">
                        <h5><i class="fas fa-venus-mars"></i> RANDOM PIC</h5>
                    </div>
                    <img id="rdImg" src="/images/pic/<%= rd_pic[0].pic_name%>" style="width: 100%; height: auto;">
                    <!-- The Modal -->
                    <div id="myModal" class="modal">

                        <!-- The Close Button -->
                        <span class="close">&times;</span>
                    
                        <!-- Modal Content (The Image) -->
                        <img class="modal-content" id="img01">
                    
                        <!-- Modal Caption (Image Text) -->
                        <div id="caption"></div>
                    </div>
                </div>
                <!-- END OF RANDOM PIC -->

                <% include top%>

            
            </div>
        </div>
        
        
        
    </div>
    
    <% include footer%>

	<!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        
        document.getElementById("rdImg").onclick = function(){
            window.open($(this)[0].src, '_blank')
        }

    </script>
</body>
</html>