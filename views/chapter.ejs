<!DOCTYPE html>
<html>
    <% include head%>
<body>	
    <% include header%>
    
    <!-- MAIN -->
    <div class="container">

        <!-- ARTICLE NAME -->
        <div class="row article_name">
            <div class="col-sm-12 bg-dark rounded">
                <h6><b>Tên truyện: </b><a href="/article/<%= article[0].ar_ID%>" id="article"><%= article[0].ar_name%></a></h6>
            </div>
        </div>
        <!-- END OF ARTICLE NAME  -->

        <!-- CHAPTER NAVIGATION -->
        <div class="row chapter_nav">
            <div class="col-sm-12 text-center">
                <%if(chapter[0].chap_ID === chapter_list[0].chap_ID) {%>
                    <a href="" class="nav_icon"><i class="fas fa-backward"></i></a>
                <%} else {%>
                    <a href="/chapter/<%= article[0].ar_ID%>-<%= chapter[0].chap_ID - 1%>" class="nav_icon"><i class="fas fa-backward"></i></a>
                <%}%>
                <select id="chapter_select" onchange="changeChapter(<%= article[0].ar_ID%>)">
                <%for(let i = 0; i < chapter_list.length; i++) {%>
                    <%if(chapter_list[i].chap_ID === chapter[0].chap_ID) {%>
                        <option value="<%= chapter_list[i].chap_ID%>" selected><%= chapter_list[i].chap_name%></option>
                    <%} else {%>
                        <option value="<%= chapter_list[i].chap_ID%>"><%= chapter_list[i].chap_name%></option>
                    <%}%>
                <%}%>
                </select>
                <%if(chapter[0].chap_ID === chapter_list[chapter_list.length - 1].chap_ID) {%>
                    <a href="" class="nav_icon"><i class="fas fa-forward"></i></a>
                <%} else {%>
                    <a href="/chapter/<%= article[0].ar_ID%>-<%= chapter[0].chap_ID + 1%>" class="nav_icon"><i class="fas fa-forward"></i></a>
                <%}%>
            </div>
        </div>
        <!-- END OF CHAPTER NAVIGATION -->
        
        <!-- CHAPTER PAGES -->
        <div class="row content">
            <div class="col-sm-12">
                <ul>
                    <%for(let i = 0; i < chapter[0].chap_page; i++) {%>
                    <li>
                        <img src="/images/chapter/<%=article[0].ar_name%>/<%= chapter[0].chap_ID%>/<%= i%>.jpg" class="chapter_cont">
                    </li>
                    <%}%>
                </ul>
            </div>
        </div>
        <!-- END OF CHAPTER PAGES -->
        
        <!-- CHAPTER NAVIGATION -->
        <div class="row chapter_nav">
            <div class="col-sm-12 text-center">
                <%if(chapter[0].chap_ID === chapter_list[0].chap_ID) {%>
                    <a href="" class="nav_icon"><i class="fas fa-backward"></i></a>
                <%} else {%>
                    <a href="/chapter/<%= article[0].ar_ID%>-<%= chapter[0].chap_ID - 1%>" class="nav_icon"><i class="fas fa-backward"></i></a>
                <%}%>
                <select id="chapter_select" onchange="changeChapter(<%= article[0].ar_ID%>)">
                <%for(let i = 0; i < chapter_list.length; i++) {%>
                    <%if(chapter_list[i].chap_ID === chapter[0].chap_ID) {%>
                        <option value="<%= chapter_list[i].chap_ID%>" selected><%= chapter_list[i].chap_name%></option>
                    <%} else {%>
                        <option value="<%= chapter_list[i].chap_ID%>"><%= chapter_list[i].chap_name%></option>
                    <%}%>
                <%}%>
                </select>
                <%if(chapter[0].chap_ID === chapter_list[chapter_list.length - 1].chap_ID) {%>
                    <a href="" class="nav_icon"><i class="fas fa-forward"></i></a>
                <%} else {%>
                    <a href="/chapter/<%= article[0].ar_ID%>-<%= chapter[0].chap_ID + 1%>" class="nav_icon"><i class="fas fa-forward"></i></a>
                <%}%>
            </div>
        </div>
        <!-- END OF CHAPTER NAVIGATION -->
        
        <!-- COMMENT SECTION -->
        <div id="cmt_section" class="row">
            <div class="col-md-12 cmt_title">
                <h5><i class="fas fa-comment"></i> Comment gần đây</h5>
            </div>
            <div class="col-md-12">
                <ul class="cmt_list">
                    <!--CMT-->
                    <li class="cmt_item bg-dark">
                        <div class="cmt_info">
                            <a href="" class="cmt_name">Dzao' Tru?</a> 
                            <span class="badge badge-info cmt_time">1 minute ago</span>
                            <p>Em vu' to qua'. Minh` lam` quen nha </p> 
                        </div>
                    </li>
                    <li class="cmt_item bg-dark">
                        <div class="cmt_info">
                            <a href="" class="cmt_name">Dzao' Tru?</a> 
                            <span class="badge badge-info cmt_time">1 minute ago</span>
                            <p>Em vu' to qua'. Minh` lam` quen nha </p> 
                        </div>
                    </li>
                    <li class="cmt_item bg-dark">
                        <div class="cmt_info">
                            <a href="" class="cmt_name">Dzao' Tru?</a> 
                            <span class="badge badge-info cmt_time">1 minute ago</span>
                            <p>Em vu' to qua'. Minh` lam` quen nha </p> 
                        </div>
                    </li>

                </ul>
            </div>
            <div class="pagination">
                <a href="#">&laquo;</a>
                <a href="#" class="active">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
                <a href="#">5</a>
                <a href="#">6</a>
                <a href="#">&raquo;</a>
            </div>
        </div>
        <!-- END OF COMMENT SECTION -->

        <!-- COMMENT FORM -->
        <div id="comment" class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3>Comment của bạn</h3>
                <form method="post">
                    <div class="form-group">
                        <label>Tên:</label>
                        <input name="comm_name" required type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input name="comm_mail" required type="email" class="form-control" id="pwd">
                    </div>
                    <div class="form-group">
                        <label>Nội dung:</label>
                        <textarea name="comm_details" required rows="5" class="form-control"></textarea>     
                    </div>
                    <button type="submit" name="sbm" class="btn btn-primary">Gửi</button>
                </form> 
            </div>
        </div>
        <!-- END OF COMMENT FORM -->
    </div>
    
    <% include footer%>

	<!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        function changeChapter(ar_ID){
            let temp = document.querySelector('#chapter_select').value;
            let http = `/chapter/${ar_ID}-${temp}`;
            window.location.href = http;
        }
    </script>
</body>
</html>